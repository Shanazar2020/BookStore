<Window x:Class="BookStore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookStore"
        mc:Ignorable="d"
        Title="On Board" Height="400" Width="400">
    <StackPanel Margin="60">
        <Label Content="Welcome" FontSize="25" Height="45" Width="182" FontWeight="Bold" RenderTransformOrigin="0.332,0.023" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center"/>
        <Separator></Separator>
        <Label Content="Username"  />
        <TextBox Name="username" FontSize="18" />
        <Label Content="Password" />
        <PasswordBox Name="password" FontSize="18" />
        <Button Name="login" Content="Login" Margin="60 10" FontSize="14" Width="100" Click="login_Click" />
        <Button Name="register" Content="Register" Margin="60 10" FontSize="14" Width="100" Click="register_Click"/>
    </StackPanel>
</Window>
